<%= turbo_stream.replace("favorite_btn_#{@activity.id}") do %>
  <%= render partial: "favorites/favorite", locals: { favorite: (@favorite if @favorite.persisted?), activity: @activity } %>
<% end %>

<% if request.referer.end_with?("/favorites") %>
  <%= turbo_stream.remove(dom_id(@favorite)) %>
<% end %>

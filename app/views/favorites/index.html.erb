<div class="container">
  <h1>Mes favoris</h1>

   <div class="d-grid gap-4 mt-4" style="grid-template-columns: repeat(auto-fit, minmax(18rem, 1fr)); max-width: 1000px; margin: auto;">
    <% @favorites.each do |favorite| %>
      <div class="activity-card">

       <div class="favorite-container">
          <%= link_to toggle_activity_favorites_path(favorite.activity),
                      data: { turbo_method: :post },
                      id: "favorite_btn_#{favorite.activity.id}",
                      class: "favorite-btn" do %>
            <% if current_user.favorites.exists?(activity: favorite.activity) %>
              <i class="fa-solid fa-heart favorite-btn"></i>
            <% else %>
              <i class="fa-regular fa-heart favorite-btn"></i>
            <% end %> 
          <% end %>
        </div>

        <!-- Bouton de suppression -->
        <%# <div class="text-end me-2">

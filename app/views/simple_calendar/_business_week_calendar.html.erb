<div class="simple-calendar">
  <div class="calendar-heading">
    <span class="calendar-title">
      <%= t('simple_calendar.week', default: '') %>
    </span>

    <div class="d-flex justify-content-between">
      <%= link_to t('simple_calendar.previous', default: '<<'), calendar.url_for_previous_view, class:"text-decoration-none ms-2" %>
      <%= link_to t('simple_calendar.today', default: 'Aujourd\'hui'), calendar.url_for_today_view, class:"text-decoration-none" %>
      <%= link_to t('simple_calendar.next', default: '>>'), planning_path(start_date: date_range.first + 1.week), class:"text-decoration-none me-2" %>
    </div>
  </div>

  <div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <% date_range.slice(0, 7).each do |day| %>
            <th class="text-center"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% date_range.each_slice(7) do |week| %>
          <tr>
            <% week.each do |day| %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <% if day = Date.today %>
                  <div><%= image_tag "weather/#{@current_weather["icon"]}.png", height:"30px", class:"mb-1" %></div>
                <%# elsif day > Date.today && Date.today.strftime('%A') == %>
                  <div><%#= image_tag "weather/#{@daily_weather[0]["icon"]}.png", height:"30px", class:"mb-1" %></div>
                <% else %>
                  <div height="30px" class="mb-1"> </div>
                <% end %>
                <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

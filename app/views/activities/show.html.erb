<div class="container mt-4">
  <div class="activity-card-description mt-3">
    <div class="title-favorite d-flex justify-content-between align-items-center">
      <h1><%= @activity.name %></h1>
      <%= link_to toggle_activity_favorites_path(@activity),
      data: { turbo_method: :post },
      id: "favorite_button_#{@activity.id}",
      class: "favorite-button" do %>
        <% if current_user.favorites.exists?(activity: @activity) %>
          <i class="fa-solid fa-heart text-danger"></i>
        <% else %>
          <i class="fa-regular fa-heart text-danger"></i>
        <% end %>
      <% end %>
    </div>

    <% if @activity.photo.attached? %>
      <%= cl_image_tag @activity.photo.key, class: "w-100 object-fit-cover position-center rounded-4", height: '200px' %>
    <% else %>
      <%= image_tag "board-game.png", class: "w-100 object-fit-cover position-center rounded-4", height: '200px' %>
    <% end %>

    <div class="activity-icons d-flex justify-content-center gap-3 pt-2 my-1">
      <div class="circle">
        <%= image_tag @activity.image_for_setting, alt: @activity.setting, class: "activity-icon" %>
      </div>

      <div class="circle"><%= @activity.formatted_duration ? @activity.duration : "Durée indéterminée" %></div>

      <div class="circle"><%= @activity.formatted_age ? @activity.minimum_age : "Aucun âge minimum requis" %></div>
    </div>

  </div>

  <div class="activity-card-description mt-3">
    <h5>Description</h5>
    <p class="card-text"><%= @activity.description[0..1000] %></p>
  </div>

  <div class="activity-card-description mt-3">
    <h5>Matériel</h5>
    <% if @activity.material = "néant" %>
        <p class="card-text">Aucun matériel</p>
    <% else %>
      <p class="card-text"><%= @activity.material %></p>
    <% end %>
  </div>

  <%= link_to "Retour à la liste d'activités", activities_path, class: "text-decoration-none d-block text-center mt-2" %>
</div>
